//Questão 20 - Faça um algoritmo que leia um número e informe na tela se é par ou não
//Autor: Vitória Kamilly Lago Soares

programa 20{
	funcao inicio (){
		inteiro num  
		
		escreva("Informe o número: ")
		leia(num)
		
		se(num%2==0){
			escreva("O número é par.")
		}senao{
			escreva("O número é ímpar.")
		}
	}
}
