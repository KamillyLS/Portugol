//[DESAFIO] Refaça o algoritmo 25, acrescentando o recurso de mostrar que tipo de triângulo será formado:
//- EQUILÁTERO: todos os lados iguais
//- ISÓSCELES: dois lados iguais
//- ESCALENO: todos os lados diferentes
//Autor: Vitória Kamilly Lago Soares

programa 30{
	funcao inicio (){
    inteiro a, b, c
		
		escreva("Informe o comprimento do primeiro segmento: ")
		leia(a)
		escreva("Informe o comprimento do segundo segmento: ")
		leia(b)
		escreva("Informe o comprimento do terceiro segmento: ")
		leia(c)
		
		se(b==a e c==a e b==c){
		    escreva("Os segmentos formam um triângulo equilátero.")
		}
		senao se(a==b ou b==c ou c==a){
			escreva("Os segmentos formam um triângulo isósceles.")
		} 
		senao se(a!=b e a!=c e b!=c){
			escreva("Os segmentos formam um triângulo escaleno.")
		}
		senao{
		    escreva("Os segmentos não formam um triângulo")
		}
	}
}
